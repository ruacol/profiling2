@using Profiling2.Web.Mvc.Areas.Documents.Controllers.ViewModels
@model DocumentationFileTagViewModel

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-error">
        @Html.ValidationSummary()
    </div>
}

<fieldset>
    <div class="control-group">
        <label class="control-label">Name</label>
        <div class="controls">
            @Html.TextBoxFor(x => x.Name, new { @class = "input-xxlarge" })
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Permission</label>
        <div class="controls">
            @Html.DropDownListFor(x => x.AdminPermissionId, Model.PermissionSelectItems, new { @class = "input-xxlarge" })
        </div>
    </div>
</fieldset>
    
<div class="form-actions">
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back", "Manage", "Home", new { area = "Documents" }, new { @class = "btn" })
    @if (string.Equals(ViewContext.Controller.ValueProvider.GetValue("action").RawValue, "EditTag"))
    {
        @Html.ActionLink("Delete", "DeleteTag", "Home", new { area = "Documents", id = Model.Id }, new { @class = "btn" })
    }
</div>