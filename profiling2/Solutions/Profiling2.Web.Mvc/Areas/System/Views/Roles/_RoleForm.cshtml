@using Profiling2.Web.Mvc.Areas.System.Controllers.ViewModels
@model RoleViewModel
@{
    ViewBag.Title = "_RoleForm";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-error">
        @Html.ValidationSummary()
    </div>
}

<fieldset>
    <div class="control-group">
        <label class="control-label">Name</label>
        <div class="controls">
            @Html.TextBoxFor(x => x.Name, new { @class = "input-xxlarge" })
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Permissions</label>
        <div class="controls">
            @Html.HiddenFor(x => x.AdminPermissionIds, new { @class = "input-xxlarge" })
        </div>
    </div>
</fieldset>
    
<div class="form-actions">
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back", "Index", "Roles", new { area = "System" }, new { @class = "btn" })
</div>