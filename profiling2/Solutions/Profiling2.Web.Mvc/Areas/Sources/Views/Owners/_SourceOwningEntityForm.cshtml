@using Profiling2.Web.Mvc.Areas.Sources.Controllers.ViewModels
@model SourceOwningEntityViewModel

@if (!ViewData.ModelState.IsValid)
{
<div class="alert alert-error">
    @Html.ValidationSummary()
</div>
}

<div id="validation-errors"></div>
    
<fieldset>
    <div class="control-group">
        <label class="control-label">Name</label>
        <div class="controls">
            @Html.TextBoxFor(x => x.Name, new { @class = "input-xxlarge" })
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Source Path Prefix</label>
        <div class="controls">
             @Html.TextBoxFor(x => x.SourcePathPrefix, new { @class = "input-xxlarge" })
        </div>
    </div>
</fieldset>