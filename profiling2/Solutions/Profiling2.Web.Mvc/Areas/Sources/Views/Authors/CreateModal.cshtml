@using Profiling2.Web.Mvc.Areas.Sources.Controllers.ViewModels
@model SourceAuthorViewModel
@{
    Layout = "";
    ViewBag.Title = "Create Source Author";
}

@using (Html.BeginForm("CreateModal", "Authors", FormMethod.Post, new { id = "source-author-create-form" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Create Source Author</h4>
  </div>
  <div class="modal-body form-horizontal">
    @if (!ViewData.ModelState.IsValid)
    {
      <div class="alert alert-error">
        @Html.ValidationSummary()
      </div>
    }

    <div id="validation-errors"></div>

    <fieldset>
      <div class="control-group">
        <label class="control-label">Name *</label>
        <div class="controls">
            @Html.TextBoxFor(x => x.Author, new { @class = "input-xlarge" })
        </div>
      </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <a id="modal-source-author-create-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}