@using Profiling2.Web.Mvc.Areas.Screening.Controllers.ViewModels
@model ProposedPersonViewModel
@{
  Layout = "";
  ViewBag.Title = "Proposed Person";
}

@using (Html.BeginForm("ProposedPersonModal", "Initiate", FormMethod.Post))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Proposed Person</h4>
  </div>
  <div class="modal-body form-horizontal">
    <div id="validation-errors"></div>

    @Html.HiddenFor(x => x.RequestId)
    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Name
            </label>
            <div class="controls">
                @Html.TextBoxFor(x => x.Name, new { @class = "input-xxlarge" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                ID Number
            </label>
            <div class="controls">
                @Html.TextBoxFor(x => x.MilitaryIDNumber, new { @class = "input-xxlarge" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Notes
            </label>
            <div class="controls">
                @Html.TextAreaFor(x => x.Notes, new { @class = "input-xxlarge" })
            </div>
        </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <a id="modal-edit-proposed-person-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}