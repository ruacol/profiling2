@using Profiling2.Web.Mvc.Areas.Screening.Controllers.ViewModels
@model ProposedPersonViewModel
@{
  Layout = "";
  ViewBag.Title = "Propose Person";
}

@using (Html.BeginForm("ProposePersonModal", "Initiate", FormMethod.Post))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Propose Person</h4>
  </div>
  <div class="modal-body form-horizontal">
    @Html.HiddenFor(x => x.RequestId)
    <p>If you cannot find a person in the database, please enter their details below.</p>
    <div id="validation-errors"></div>

    <fieldset>
        <div class="control-group">
            <label class="control-label">
                Name(s) *
            </label>
            <div class="controls">
                @Html.TextBoxFor(x => x.Name, new { @class = "input-xxlarge" })
                <i class="accordion-toggle icon-info-sign" title="The first names for this inidividual including any middle names."></i>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                ID Number (Military, police, etc.)
            </label>
            <div class="controls">
                @Html.TextBoxFor(x => x.MilitaryIDNumber, new { @class = "input-xxlarge" })
                <i class="accordion-toggle icon-info-sign" title="One or more ID numbers that help identify the individual."></i>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">
                Notes
            </label>
            <div class="controls">
                @Html.TextAreaFor(x => x.Notes, new { @class = "input-xxlarge" })
                <i class="accordion-toggle icon-info-sign" title="Notes about this person."></i>
            </div>
        </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <a id="modal-propose-person-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}