@using Profiling2.Infrastructure.Util
@using Profiling2.Domain.Prf.Sources
@model Source

@if (Source.IMAGE_FILE_EXTENSIONS.Contains(Model.GetFileExtension()))
{
    <ul class="thumbnails">
        <li>
            <div class="thumbnail" style="margin-top: 5px;">
                <a data-toggle="modal" href="#lightbox-@Model.Id">
                    <img src="@(Request.ApplicationPath + "/")Profiling/Sources/Preview/@Model.Id" width="150" height="150">
                </a>
                <div id="lightbox-@Model.Id" class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3>@Model.SourceName</h3>
                    </div>
                    <div class='modal-body'>
                        <img src="@(Request.ApplicationPath + "/")Profiling/Sources/Preview/@Model.Id">
                    </div>
                </div>
            </div>
        </li>
    </ul>
}