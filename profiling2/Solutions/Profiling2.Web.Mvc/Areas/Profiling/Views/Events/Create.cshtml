@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model EventViewModel
@{
    Layout = "";
    ViewBag.Title = "Create Event";
}

@using (Html.BeginForm("Create", "Events", FormMethod.Post))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>
      Create Event
      <button type="button" class="btn btn-mini" data-toggle="collapse" data-target="#event-form-help" title="Click to toggle help"><i class="icon-question-sign"></i></button>
    </h4>
  </div>
  <div class="modal-body form-horizontal">
    @Html.Partial("_EventForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-event-create-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}