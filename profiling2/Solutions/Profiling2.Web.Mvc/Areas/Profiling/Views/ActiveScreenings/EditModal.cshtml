@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model ActiveScreeningViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("EditModal", "ActiveScreenings", new { area = "Profiling", personId = Model.PersonId }, FormMethod.Post))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Edit Active Screening</h4>
    </div>
    <div class="modal-body form-horizontal">
        @Html.Partial("_ActiveScreeningForm")
    </div>
    <div class="modal-footer">
        <a id="modal-active-screening-edit-button" class="btn btn-primary">Save</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}