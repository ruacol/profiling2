@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model OrganizationViewModel
@{
    ViewBag.Title = "Edit Organization";
}

<h2>Edit Organization</h2>

<hr />

@using (Html.BeginForm("Edit", "Organizations", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_OrganizationForm", Model)
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Details", "Organizations", new { area = "Profiling", id = Model.Id }, new { @class = "btn" })
    </div>
}
