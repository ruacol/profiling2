@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model OrganizationViewModel
@{
    ViewBag.Title = "Create Organization";
}

<h2>Create Organization</h2>

<hr />

@using (Html.BeginForm("Create", "Organizations", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_OrganizationForm", Model)
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Index", "Organizations", new { area = "Profiling" }, new { @class = "btn" })
    </div>
}
