@using Profiling2.Domain.Prf
@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PersonViewModel
@{
  Layout = "";
  ViewBag.Title = "Edit Public Summary";
}

@using (Html.BeginForm("EditPublicSummaryModal", "Persons", FormMethod.Post))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Edit @Model.Name's Public Summary</h4>
    <div class="row-fluid">
      <span class="pull-right">Last updated: @Model.PublicSummaryDate</span>
    </div>
  </div>
  <div class="modal-body form-horizontal" style="clear: both;">
    <p>Enter basic non-confidential text here about @Model.Name.</p>
    <p><p>Only <em>@AdminPermission.CanChangePersonPublicSummaries</em> permission holders may edit this text.</p></p>
    <div class="control-group">
      <label class="control-label">
        Summary
      </label>
      <div class="controls">
        @Html.TextAreaFor(x => x.PublicSummary, new { @class = "input-xxlarge", rows = "5" })
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a id="modal-public-summary-save-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}