@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model SourceViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("Create", "Sources", new { area = "Profiling" }, FormMethod.Post, new { id = "modal-form" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Add New Source</h4>
    </div>
    <div class="modal-body form-horizontal">
        <div id="validation-errors"></div>
        @Html.HiddenFor(x => x.Id)
        <fieldset>
            <div class="control-group">
                <label class="control-label">File *</label>
                <div class="controls">
                    <span class="btn fileinput-button">
                        <span>Upload File</span>
                        <input type="file" id="FileData" name="FileData" />
                    </span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Full Reference</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.FullReference, new { @class = "input-xlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Is it restricted?</label>
                <div class="controls">
                    @Html.CheckBoxFor(x => x.IsRestricted)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Language</label>
                <div class="controls">
                    @Html.DropDownListFor(x => x.FileLanguageId, Model.Languages, string.Empty, new { @class = "input-large" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Notes</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.Notes, new { @class = "input-xlarge" })
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <a id="modal-source-create-button" class="btn btn-primary">Save</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}