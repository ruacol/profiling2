@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model SourceViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("Edit", "Sources", new { area = "Profiling" }, FormMethod.Post, new { id = "modal-source-edit-form" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Edit Source</h4>
    </div>
    <div class="modal-body form-horizontal">
        <div id="validation-errors"></div>
        @Html.HiddenFor(x => x.Id)
        <fieldset>
            <div class="control-group">
                <label class="control-label">Full Reference</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.FullReference, new { @class = "input-xlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Notes</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.Notes, new { @class = "input-xlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Is it restricted?</label>
                <div class="controls">
                    @Html.CheckBoxFor(x => x.IsRestricted)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Is it read only?</label>
                <div class="controls">
                    @Html.CheckBoxFor(x => x.IsReadOnly)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Is it public?</label>
                <div class="controls">
                    @Html.CheckBoxFor(x => x.IsPublic)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Is it archived?</label>
                <div class="controls">
                    @Html.CheckBoxFor(x => x.Archive)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Authors</label>
                <div class="controls">
                    @Html.HiddenFor(x => x.SourceAuthorIds, new { @class = "input-xxlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Owners</label>
                <div class="controls">
                    @Html.HiddenFor(x => x.SourceOwningEntityIds, new { @class = "input-xxlarge" })
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <a id="modal-source-edit-button" class="btn btn-primary">Save</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}