@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model UnitSourceViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("Add", "UnitSources", new { area = "Profiling", personId = Model.UnitId }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Add Unit Source</h4>
    </div>
    <div class="modal-body">
        <div id="validation-errors"></div>
        @Html.HiddenFor(x => x.UnitId)
    
        <fieldset>
            <div class="control-group">
                <label class="control-label">Unit</label>
                <div class="controls">
                    <span class="input-xxlarge uneditable-input">@Model.UnitName</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Source</label>
                <div class="controls">
                    @Html.HiddenFor(x => x.SourceId, new { @class = "input-xxlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Reliability</label>
                <div class="controls">
                    @Html.DropDownListFor(x => x.ReliabilityId, Model.Reliabilities, string.Empty, new { @class = "input-large" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Commentary</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.Commentary, new { @class = "input-xxlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Notes</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.Notes, new { @class = "input-xxlarge" })
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <a id="modal-unit-source-add-button" class="btn btn-primary">Save</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}