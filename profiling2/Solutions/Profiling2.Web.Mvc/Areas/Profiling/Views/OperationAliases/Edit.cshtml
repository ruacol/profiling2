@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model OperationAliasViewModel
@{
    Layout = "";
    ViewBag.Title = "Edit Operation Alias";
}

@using (Html.BeginForm("Edit", "OperationAliases", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Edit Operation Alias</h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_OperationAliasForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-operation-alias-edit-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}