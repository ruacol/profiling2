@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model OperationAliasViewModel
@{
    ViewBag.Title = "Create Operation Alias";
}

<h2>Create Operation Alias</h2>

<hr />

@using (Html.BeginForm("Create", "OperationAliases", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_OperationAliasForm", Model)
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Details", "Operations", new { area = "Profiling", id = Model.OperationId }, new { @class = "btn" })
    </div>
}