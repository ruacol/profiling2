@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model OperationViewModel
@{
    ViewBag.Title = "Create Operation";
}

<h2>Create Operation</h2>

<hr />

@using (Html.BeginForm("Create", "Operations", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_OperationForm", Model)
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Index", "Operations", new { area = "Profiling" }, new { @class = "btn" })
    </div>
}