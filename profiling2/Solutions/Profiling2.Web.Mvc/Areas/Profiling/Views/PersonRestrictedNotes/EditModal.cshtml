@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PersonRestrictedNoteViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("EditModal", "PersonRestrictedNotes", new { area = "Profiling", personId = Model.PersonId }, FormMethod.Post))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Edit Note</h4>
    </div>
    <div class="modal-body form-horizontal">
        @Html.Partial("_PersonRestrictedNoteForm")
    </div>
    <div class="modal-footer">
        <a id="modal-restricted-note-edit-button-@Model.Id" class="btn btn-primary">Save</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}