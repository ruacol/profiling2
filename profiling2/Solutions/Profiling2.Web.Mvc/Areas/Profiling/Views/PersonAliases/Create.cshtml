@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PersonAliasViewModel
@{
    Layout = "";
    ViewBag.Title = "Add Person Alias";
}

@using (Html.BeginForm("Create", "PersonAliases", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Add Person Alias</h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_PersonAliasForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-person-alias-create-save-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}