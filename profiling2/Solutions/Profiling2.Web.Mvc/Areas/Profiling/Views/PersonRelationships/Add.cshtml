@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PersonRelationshipViewModel
@{
    Layout = "";
    ViewBag.Title = "Add Person Relationship";
}

@using (Html.BeginForm("Add", "PersonRelationships", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>
      Add Person Relationship
    </h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_PersonRelationshipForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-person-relationship-add-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}