@using Profiling2.Domain.DTO
@model IList<UnitDTO>
@{
    ViewBag.Title = "Empty Units";
}
@section scripts
{
  $(document).ready(function() {
    new Profiling.DataTable("units-table", {
      bServerSide: false
    });
  }); 
}

<h2>Empty Units</h2>

<p>This table lists units that are not linked to any careers, other units by hierarchy, and are not responsible for any events.</p>

<hr />

<table id="units-table" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    @foreach (UnitDTO dto in Model)
    {
      <tr>
        <td>@Html.ActionLink(dto.UnitName, "Details", "Units", new { area = "Profiling", id = dto.Id }, null)</td>
      </tr>
    }
  </tbody>
</table>
