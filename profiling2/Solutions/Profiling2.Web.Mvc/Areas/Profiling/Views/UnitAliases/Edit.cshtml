@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model UnitAliasViewModel
@{
    Layout = "";
    ViewBag.Title = "Edit Unit Alias";
}

@using (Html.BeginForm("Edit", "UnitAliases", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Edit Unit Alias</h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_UnitAliasForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-unit-alias-edit-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}