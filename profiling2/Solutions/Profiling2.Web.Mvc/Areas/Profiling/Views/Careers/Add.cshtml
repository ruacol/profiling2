@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model CareerViewModel
@{
    Layout = "";
    ViewBag.Title = "Add Career";
}

@using (Html.BeginForm("Add", "Careers", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>
      Add Career
    </h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_CareerForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-person-career-add-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}