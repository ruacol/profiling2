@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model EventSourceViewModel
@{
    Layout = "";
}

@using (Html.BeginForm("Add", "EventSources", new { area = "Profiling", eventId = Model.EventId }, FormMethod.Post, new { id = "modal-form", @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4>Add Event Source</h4>
    </div>
    <div class="modal-body">
        <div id="validation-errors"></div>
        @Html.HiddenFor(x => x.EventId)
    
        <fieldset>
            <div class="control-group">
                <label class="control-label">Event</label>
                <div class="controls">
                    <span class="input-xxlarge uneditable-input" title="@Model.EventHeadline">@Model.EventHeadline</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Source</label>
                <div class="controls">
                    @Html.HiddenFor(x => x.SourceId, new { @class = "input-xxlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Reliability</label>
                <div class="controls">
                    @Html.DropDownListFor(x => x.ReliabilityId, Model.Reliabilities, string.Empty, new { @class = "input-large" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Commentary</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.Commentary, new { @class = "input-xxlarge" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Notes</label>
                <div class="controls">
                    @Html.TextAreaFor(x => x.Notes, new { @class = "input-xxlarge" })
                </div>
            </div>
        </fieldset>
    </div>
    <div class="modal-footer">
        <a id="modal-event-source-add-button" class="btn btn-primary">Save</a>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
}