@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PhotoViewModel
@{
    Layout = "";
    ViewBag.Title = "Edit Person Photo";
}

@using (Html.BeginForm("Edit", "PersonPhotos", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Edit Person Photo</h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_PersonPhotoForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-person-photo-edit-button-@Model.Id" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}