@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model EventRelationshipViewModel
@{
    Layout = "";
    ViewBag.Title = "Add Event Relationship";
}

@using (Html.BeginForm("Add", "EventRelationships", FormMethod.Post, new { @class = "form-horizontal" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>
      Add Event Relationship
      <button type="button" class="btn btn-mini" data-toggle="collapse" data-target="#relationship-form-help" title="Click to toggle help"><i class="icon-question-sign"></i></button>
    </h4>
  </div>
  <div class="modal-body">
    @Html.Partial("_EventRelationshipForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-event-relationship-add-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}