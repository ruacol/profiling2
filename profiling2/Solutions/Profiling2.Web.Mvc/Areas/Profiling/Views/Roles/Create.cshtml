@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model RoleViewModel
@{
    ViewBag.Title = "Create Function";
}

<h2>Create Function</h2>

<hr />

@using (Html.BeginForm("Create", "Roles", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_RoleForm", Model)
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Index", "Roles", new { area = "Profiling" }, new { @class = "btn" })
    </div>
}