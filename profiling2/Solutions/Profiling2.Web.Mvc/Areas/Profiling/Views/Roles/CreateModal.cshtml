@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model RoleViewModel
@{
    Layout = "";
    ViewBag.Title = "Create Function";
}

@using (Html.BeginForm("CreateModal", "Roles", FormMethod.Post, new { id = "role-create-form" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Create Function</h4>
  </div>
  <div class="modal-body form-horizontal">
    @Html.Partial("_RoleForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-role-create-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}