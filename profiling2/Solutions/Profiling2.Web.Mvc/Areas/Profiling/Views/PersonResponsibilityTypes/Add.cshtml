@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PersonResponsibilityTypeViewModel
@{
  Layout = "";
  ViewBag.Title = "Add Person Responsibility Type";
}

@using (Html.BeginForm("Add", "PersonResponsibilityTypes", FormMethod.Post, new { id = "modal-form" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Add Person Responsibility Type</h4>
  </div>
  <div class="modal-body form-horizontal">
    <div id="validation-errors"></div>

    <fieldset>
        <div class="control-group">
            <label class="control-label">Name *</label>
            <div class="controls">
                @Html.TextBoxFor(x => x.PersonRelationshipTypeName, new { @class = "input-xxlarge" })
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">Notes</label>
            <div class="controls">
                @Html.TextAreaFor(x => x.Notes, new { @class = "input-xxlarge" })
            </div>
        </div>
    </fieldset>
  </div>
  <div class="modal-footer">
    <a id="modal-person-responsibility-type-add-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}