@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model ActionTakenTypeViewModel
@{
  ViewBag.Title = "Edit Action Taken Type";
}

<h2>Edit Action Taken Type</h2>

<hr />

@using (Html.BeginForm("Edit", "ActionTakenTypes", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_ActionTakenTypeForm")
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Delete", "Delete", "ActionTakenTypes", new { area = "Profiling", id = Model.Id }, new { @class = "btn btn-danger" })
        @Html.ActionLink("Back", "Details", "ActionTakenTypes", new { area = "Profiling", id = Model.Id }, new { @class = "btn" })
    </div>
}
