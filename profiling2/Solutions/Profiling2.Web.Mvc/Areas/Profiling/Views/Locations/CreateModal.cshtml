@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model LocationViewModel
@{
    Layout = "";
    ViewBag.Title = "Create Location";
}

@using (Html.BeginForm("CreateModal", "Locations", FormMethod.Post, new { id = "location-create-form" }))
{
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4>Create Location</h4>
  </div>
  <div class="modal-body form-horizontal">
    @Html.Partial("_LocationForm", Model)
  </div>
  <div class="modal-footer">
    <a id="modal-location-create-button" class="btn btn-primary">Save</a>
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
}