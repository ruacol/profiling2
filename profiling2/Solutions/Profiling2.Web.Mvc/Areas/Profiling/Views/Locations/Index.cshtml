@using Profiling2.Domain.Prf
@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model IList<Location>
@{
  ViewBag.Title = "Locations";
}
@section scripts
{
  $(document).ready(function() {
    new Profiling.DataTable("locations-table", {
      bServerSide: false
    });
  }); 
}

<div class="btn-toolbar">
    <div class="btn-group">
      @Html.ActionLink("Create Location", "Create", "Locations", new { area = "Profiling" }, new { @class = "btn btn-mini" })
    </div>
    <div class="btn-group">
      @Html.ActionLink("Map", "Map", "Locations", new { area = "Profiling" }, new { @class = "btn btn-mini" })
    </div>
</div>

<h2>Locations</h2>

<hr />

<table id="locations-table" class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Town</th>
      <th>Territory</th>
      <th>Pre-2015 Province</th>
      <th>Province</th></th>
      <th>Latitude</th>
      <th>Longitude</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Location loc in Model)
    {
      <tr>
        <td>@Html.ActionLink(loc.LocationName, "Details", new { id = loc.Id })</td>
        <td>@loc.Town</td>
        <td>@loc.Territory</td>
        <td>@loc.Region</td>
        <td>@loc.Province</td>
        <td>@loc.Latitude</td>
        <td>@loc.Longitude</td>
      </tr>
    }
  </tbody>
</table>