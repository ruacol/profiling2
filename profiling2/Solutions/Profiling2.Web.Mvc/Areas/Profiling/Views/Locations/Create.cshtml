@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model LocationViewModel
@{
    ViewBag.Title = "Create Location";
}

<h2>Create Location</h2>

<hr />

@using (Html.BeginForm("Create", "Locations", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.Partial("_LocationForm", Model)
    
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Back", "Index", "Locations", new { area = "Profiling" }, new { @class = "btn" })
    </div>
}
