@using Profiling2.Web.Mvc.Areas.Profiling.Controllers.ViewModels
@model PersonViewModel
         
<p>If you cannot find a person in the database, please enter their details below.</p>
<div id="validation-errors"></div>

<fieldset>
    <div class="control-group">
        <label class="control-label">
            First Name(s)
        </label>
        <div class="controls">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "input-xxlarge" })
            <i class="accordion-toggle icon-info-sign" title="The first names for this inidividual including any middle names."></i>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Last Name(s)
        </label>
        <div class="controls">
            @Html.TextBoxFor(x => x.LastName, new { @class = "input-xxlarge" })
            <i class="accordion-toggle icon-info-sign" title="The last names for this inidividual including any surnames or family names, followed by any post names."></i>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            ID Number (Military, police, etc.)
        </label>
        <div class="controls">
            @Html.TextBoxFor(x => x.MilitaryIDNumber, new { @class = "input-xxlarge" })
            <i class="accordion-toggle icon-info-sign" title="One or more ID numbers that help identify the individual."></i>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Notes
        </label>
        <div class="controls">
            @Html.TextAreaFor(x => x.Notes, new { @class = "input-xxlarge" })
            <i class="accordion-toggle icon-info-sign" title="Notes about this person."></i>
        </div>
    </div>
</fieldset>